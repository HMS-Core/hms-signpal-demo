<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimens_16"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimens_16"
        android:paddingLeft="@dimen/dimens_24"
        android:paddingRight="@dimen/dimens_24">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_56"
            android:gravity="center_vertical"
            android:textColor="@color/scan_tips_color"
            android:textSize="@dimen/dimens_20sp" />

        <RelativeLayout
            android:id="@+id/rl_chinese"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40">

            <TextView
                android:id="@+id/tv_select1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/scan_tips_color"
                android:textSize="@dimen/dimens_16sp" />

            <ImageView
                android:id="@+id/iv_chinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/select_rb_icon"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_english"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40">

            <TextView
                android:id="@+id/tv_select2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/scan_tips_color"
                android:textSize="@dimen/dimens_16sp" />

            <ImageView
                android:id="@+id/iv_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/unselect_rb_icon"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_marginTop="@dimen/dimens_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:gravity="center"
            android:text="@string/cancel_text"
            android:textColor="@color/home_text_select"
            android:textSize="@dimen/dimens_16sp" />

    </LinearLayout>
</layout>
